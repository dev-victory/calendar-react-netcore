{
  "Routes": [
    // Event API
    {
      "DownstreamPathTemplate": "/api/v1/Event/{userId}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5100"
        }
      ],
      "UpstreamPathTemplate": "/Event/GetEventsByUser/{userId}",
      "UpstreamHttpMethod": [ "GET" ],
      "FileCacheOptions": { "TtlSeconds": 10 }
    },
    {
      "DownstreamPathTemplate": "/api/v1/Event/GetEventById/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5100"
        }
      ],
      "UpstreamPathTemplate": "/Event/GetEventById/{id}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Event",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5100"
        }
      ],
      "UpstreamPathTemplate": "/Event",
      "UpstreamHttpMethod": [ "POST" ],
      "RateLimitOptions": {
        //"ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "3s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
      //"AuthenticationOptions": {
      //  "AuthenticationProviderKey": "Bearer",
      //  "AllowedScopes": []
      //}
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5020"
  }
}
